{
  "manifest_version": 3,
  "name": "DRŚYA — Quick View",
  "version": "1.1.0",
  "description": "Minimal popup for last scan, threat counts, and quick jump to the DRSYA dashboard.",
  "action": {
    "default_title": "DRŚYA",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": ["storage"],
  "host_permissions": [
    "http://127.0.0.1:5000/*",
    "http://localhost:5000/*"
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "drsya-quickview@local",
      "strict_min_version": "109.0"
    }
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  }
}

